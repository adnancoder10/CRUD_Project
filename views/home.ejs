<%- include('./partials/header.ejs') %>


<div id="container">
    <div id="form-container">
        <h1>New user</h1>
        <form action="/" method="post" id="project-form">
          <div class="input-container">
            <input type="text" name="Fname", placeholder="Enter your first name" id="Fname">
            <% if (!Fname) { %>
              <label style="display: block;" for="">First name is reqire</label>
             
            <% } %>
          </div>

          <div class="input-container">
            <input type="text" name="Lname", placeholder="Enter your last" id="Lname" title="">
            <% if (!Lname) { %>
              <label style="display: block;" for="">last name is reqire</label>
             
            <% } %>
          </div>

          <div class="input-container">
            <input type="email" name="Email", placeholder="Enter your email" id="Email" >
            <% if (!Email) { %>
              <label style="display: block;" for="">First name is reqire</label>
             
            <% } %>
          </div>
          <div class="input-container">
            <input type="text" name="Age", placeholder="Enter your age" id="Age">
            <% if (!Age) { %>
              <label style="display: block;" for="">Age is reqire</label>
             
            <% } %>
          </div>
          <div class="input-container">

            <input type="submit" value="submit" id="">
          </div>
        </form>
    </div>
    <div id="showing-date-container">
      
        <table>
          <tr>
            <th>Fname</th>
            <th>Lname</th>
            <th>Email</th>
            <th>Age</th>
            <th>Del</th>
            <th>Update</th>
          </tr>
          <br>
          <% data.forEach(value => { %>
            <tr>
              <td><%= value.Fname %></td>
              <td><%= value.Lname %></td>
              <td><%= value.Email %></td>
              <td><%= value.Age %></td>
              <td><form action="/Delete/User/<%=value._id %>" method="post">
                <input type="submit" value="Delete">
              </form></td>
              <td><form action="/Update/User/<%=value._id%>" method="get">
                <input type="submit" value="Update">
              </form></td>
            </tr>

          <% }) %>


           
          </table>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
